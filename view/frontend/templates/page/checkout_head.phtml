    'css/styles.css'
];
?>

<?php foreach ($stylesheets as $stylesheet): ?>
    <?= /* @noEscape */ $secureRenderer->renderTag(
        'link',
        [
            'rel' => 'stylesheet preload',
            'type' => 'text/css',
            'media' => 'all',
            'as' => 'style',
